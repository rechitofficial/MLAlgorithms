<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".LinearRegressionFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_linearRegression"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:padding="0dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextColor="@color/white"/>

<!--        <TextView-->
<!--            android:id="@+id/tv_type_regression"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:gravity="center"-->
<!--            android:paddingTop="16dp"-->
<!--            android:text="title"-->
<!--            android:textSize="27sp"-->
<!--            android:textStyle="bold"/>-->

        <TextView
            android:id="@+id/tv_type_definition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="definiton"
            android:lines="5"
            android:layout_marginTop="16dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/input_the_x_value"
            android:paddingTop="16dp"/>
        <EditText
            android:id="@+id/edt_x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/input_the_y_value"
            android:paddingTop="16dp"/>
        <EditText
            android:id="@+id/edt_y"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_calculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_calculate"/>
        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/result"
            android:textSize="24sp"
            android:layout_marginTop="16dp"/>



</LinearLayout>